@inject OpenWeatherClient OpenWeatherClient

@if (OpenWeather is not null)
{
    <div class="">
        <div class="d-flex justify-content-center">
            <div class="p-4 card">
                <img class="" src="@Icon" alt="Weather Icon" />

                <div class="d-flex justify-content-between">

                    <div class="text-start">
                        <h2>@OpenWeather.Name<span class="small-font"> [@OpenWeather?.Coord?.Lat @OpenWeather?.Coord?.Lon]</span></h2>
                        <h1 class="pt-2 large-font">@Temp</h1>
                    </div>

                    @foreach (var weather in OpenWeather?.Weather!)
                    {
                        <div class="text-end">

                            <h2 class="">@weather.Main</h2>
                            <h4 class="">@weather.Description</h4>
                        </div>
                    }
                </div>



                <div class="mt-5 d-flex justify-content-between align-items-baseline">
                    <div class="text-start">
                        <h1 class="">@DateTime.Now.ToShortTimeString()</h1>
                        <h6 class="">@DateTime.Now.ToString("dd. MMMM, yyyy.")</h6>
                        @* <p class="ms-4 mb-4">Wednesday, 09 November 2024<span class="sm-font">AM</span></p> *@
                    </div>
                    <div class="text-end">
                        <h1 class="">@DateTime.Now.ToShortTimeString()</h1>
                        <h6 class="">@DateTime.Now.ToString("dd. MMMM, yyyy.")</h6>
                        @* <p class="ms-4 mb-4">Wednesday, 09 November 2024<span class="sm-font">AM</span></p> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public string City { get; set; } = "Požega";

    OpenWeatherModel? OpenWeather;
    List<Weather>? Weathers => OpenWeather?.Weather;

    string? Icon => $"//openweathermap.org/img/wn/{Weathers?.FirstOrDefault()?.Icon}@4x.png";
    string? Temp => $"{OpenWeather?.Main?.Temp}°C";


    protected override async Task OnParametersSetAsync() => OpenWeather = await OpenWeatherClient.GetWeatherAsync(City);
}